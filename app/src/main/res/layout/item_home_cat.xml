<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"

    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/yellow"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/room_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room 1"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

                <TextView
                    android:id="@+id/country_desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bangkok  -  Hot Girls"
                    android:textColor="@color/black"
                    android:layout_marginTop="14dp"
                    android:textSize="12sp"
                    />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/bullet_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u2022"
                    android:textSize="50sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/green"
                    />

                <TextView
                    android:id="@+id/online_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 789 online"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/bullet_txt"
                    android:layout_centerVertical="true"

                    />

            </RelativeLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardUseCompatPadding="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/country_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"

                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>





</androidx.cardview.widget.CardView>