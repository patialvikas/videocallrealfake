<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dic_bg_usernmuuu"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTER NAME"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Video Call"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_15sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Enter Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/dbottomcornerrrr"
                    android:fontFamily="@font/muli_bold"
                    android:hint="Enter Your Name"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Interested in"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <RadioGroup
                    android:id="@+id/radioGenderGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:button="@drawable/selradio"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Female"
                        android:textSize="@dimen/_15sdp" />

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:button="@drawable/selradio"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Male"
                        android:textSize="@dimen/_15sdp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_weight="8"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:background="@drawable/dget_start_viewww"
                            android:backgroundTint="@color/yellow"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_30sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                        <RelativeLayout
                            android:id="@+id/fbadsnative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal|bottom"
                            android:background="@android:color/transparent"
                            android:minHeight="200dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp">

                                <FrameLayout
                                    android:id="@+id/fl_adplaceholderr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/native_ad_containerr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cardr"
                                android:orientation="vertical" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
